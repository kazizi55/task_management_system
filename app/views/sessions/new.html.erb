<h1 class="text-center mt-3">ログイン</h1>

<%= form_with(url: login_path, local: true, class: "width-40rem mx-auto") do |f| %>
  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <%= f.submit 'ログイン', class: "btn btn-primary mr-2" %>
  <%= link_to 'ユーザー登録', "/users/new", method: :get %>
<% end %>
