<h1>タスク詳細</h1>

<h2><%= @task.name %></h2>
<%= @task.explanation %>
<% @task.labels.each do |label| %>
  <%= label.name %>
<% end %>
<p>期限 <%= @task.deadline %></p>

<%= link_to '戻る', "/tasks", method: :get %>
<%= link_to '編集', "/tasks/#{@task.id}/edit", method: :get %>
<%= link_to '削除', "/tasks/#{@task.id}", method: :delete %>

