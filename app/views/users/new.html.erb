<h1>ユーザーを登録</h1>

<%= form_with(model: @user, path: users_path, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: @user %>
  <%= f.label :name, '名前' %>
  <%= f.text_field :name %>
  <%= f.label :email, 'メールアドレス' %>
  <%= f.email_field :email %>
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>
  <%= f.submit '登録' %>
<% end %>
