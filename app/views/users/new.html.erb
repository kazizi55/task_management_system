<h1 class="text-center mt-3">ユーザーを登録</h1>

<%= form_with(model: @user, path: users_path, local: true, class: "width-40rem mx-auto") do |f| %>
  <%= render 'layouts/error_messages', model: @user %>
  <div class="form-group">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <%= f.submit '登録', class: "btn btn-primary mr-2" %>
  <%= link_to 'ログイン画面', "/login", method: :get %>
<% end %>
