<div class="text-center my-3">
  <h1>ラベル一覧</h1>
  <div class="mt-3">
    <%= link_to 'タスク一覧', "/tasks", method: :get, class: "btn btn-outline-secondary mr-2" %>
    <%= link_to '新規作成', "/labels/new", method: :get, class: "btn btn-outline-success mr-2" %>
  </div>
</div>

<% @labels.each do |label| %>
  <div class="card mb-2 width-30rem mx-auto">
    <h5 class="card-title ml-2 mt-2"><%= label.name %></h5>

    <div class="d-flex justify-content-end">
      <p class="card-text mr-4"><small class="text-muted"><%= time_ago_in_words(label.created_at) %>前に作成</small></p>
      <%= link_to '編集', "/labels/#{label.id}/edit", method: :get, class: "card-link mr-1" %>
      <%= link_to '削除', "/labels/#{label.id}", method: :delete, class: "card-link text-danger mr-3" %>
    </div>
  </div>
<% end %>

<%= paginate @labels %>
